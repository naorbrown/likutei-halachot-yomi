# Telegram Configuration
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Chat ID where daily messages will be sent
# Can be a user ID, group ID, or channel ID
TELEGRAM_CHAT_ID=your_chat_id_here

# =============================================
# Torah Yomi Unified Channel (Optional)
# =============================================
# These settings enable dual-publishing to the unified Torah Yomi channel

# Channel ID for the unified channel
TORAH_YOMI_CHANNEL_ID=@TorahYomiChannel

# Shared bot token for posting to unified channel
TORAH_YOMI_CHANNEL_BOT_TOKEN=

# Set to 'false' to disable unified channel publishing
TORAH_YOMI_PUBLISH_ENABLED=true

# =============================================
# Text-to-Speech Audio (Optional)
# =============================================
# Google Cloud TTS for Hebrew audio readings

# Set to 'true' to enable TTS voice messages
GOOGLE_TTS_ENABLED=false

# Service account JSON key (full JSON content, not a file path)
GOOGLE_TTS_CREDENTIALS_JSON=
